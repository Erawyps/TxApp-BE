// Schema Prisma simplifi√© pour SQLite - Focus sur l'authentification
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model utilisateur {
  id                  Int       @id @default(autoincrement())
  type_utilisateur    String // admin, chauffeur, manager, client
  nom                 String
  prenom              String?
  telephone           String
  email               String    @unique
  mot_de_passe        String
  adresse             String?
  ville               String?
  code_postal         String?
  pays                String?   @default("Belgique")
  num_bce             String?
  num_tva             String?
  tva_applicable      Boolean?  @default(true)
  tva_percent         Float?    @default(21.00)
  date_creation       DateTime? @default(now())
  actif               Boolean?  @default(true)
  last_login          DateTime?
  reset_token         String?
  reset_token_expires DateTime?
  created_at          DateTime? @default(now())
  updated_at          DateTime? @default(now())

  // Relations
  chauffeur chauffeur?
}

model chauffeur {
  id               Int       @id @default(autoincrement())
  utilisateur_id   Int       @unique
  numero_badge     String    @unique
  date_embauche    DateTime
  date_fin_contrat DateTime?
  type_contrat     String?
  compte_bancaire  String?
  taux_commission  Float?    @default(0.00)
  salaire_base     Float?    @default(0.00)
  notes            String?
  actif            Boolean?  @default(true)
  created_at       DateTime? @default(now())
  updated_at       DateTime? @default(now())

  // Relations
  utilisateur utilisateur @relation(fields: [utilisateur_id], references: [id], onDelete: Cascade)
}
